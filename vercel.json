{
  "version": 2,
  "builds": [
    {
      "src": "web/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/web/static/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/web/favicon.ico"
    },
    {
      "src": "^/manifest.json",
      "dest": "/web/manifest.json"
    },
    {
      "src": "^/((?!api/).*)",
      "dest": "/web/main.py"
    }
  ],
  "buildCommand": "apt-get update && apt-get install -y pandoc texlive-xetex && pip install -r requirements.txt && pip install -e . && npm install"
}