
{
  "version": 2,
  "builds": [
    {
      "src": "web/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/[^.]+",
      "dest": "/web/main.py",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/web/main.py"
    }
  ],
  "buildCommand": "apt-get update && apt-get install -y pandoc texlive-xetex && pip install -r requirements.txt && pip install -e . && npm install"
}