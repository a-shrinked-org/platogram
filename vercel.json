{
  "version": 2,
  "builds": [
    {
      "src": "web/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/pages/api/:path*.js"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/web/index.html"
    }
  ],
  "buildCommand": "apt-get update && apt-get install -y pandoc texlive-xetex && pip install -r requirements.txt && pip install -e ."
}