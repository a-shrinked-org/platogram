{
  "version": 2,
  "builds": [
    {
      "src": "web/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/web/index.html"
    },
    {
      "src": "/web",
      "dest": "/web/index.html"
    },
    {
      "src": "/web/(.*)",
      "dest": "/web/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/main.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && pip install -e .",
  "functions": {
    "web/main.py": {
      "maxDuration": 60,
      "memory": 1024,
      "maxPayloadSize": "50mb"
    }
  }
}