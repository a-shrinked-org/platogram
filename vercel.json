{
  "version": 2,
  "builds": [
    {
      "src": "web/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    },
    {
      "src": "pages/api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/**"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/public/uploads/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/web/index.html",
      "status": 404
    }
  ],
  "buildCommand": "apt-get update && apt-get install -y pandoc texlive-xetex && pip install -r requirements.txt && pip install -e . && npm install"
}