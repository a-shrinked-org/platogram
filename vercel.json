{
  "version": 2,
  "builds": [
    {
      "src": "web/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/status", "dest": "web/index.py" },
    { "src": "/status", "dest": "web/index.py" },
    { "src": "/reset", "dest": "web/index.py" },
    { "src": "/convert", "dest": "web/index.py" },
    { "src": "/task_status/.*", "dest": "web/index.py" },
    { "src": "/api/cron", "dest": "web/index.py" },
    { "src": "/(.*)", "dest": "/web/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/5 * * * *"
    }
  ],
  "buildCommand": "apt-get update && apt-get install -y pandoc texlive-xetex && pip install -r requirements.txt && pip install -e ."
}